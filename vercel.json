{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "server/index.js": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(?<path>.*)",
      "dest": "/server?path=$path",
      "methods": ["GET", "POST", "DELETE", "PUT"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
